<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2e2e2"
    android:id="@+id/framee"
    android:clickable="true"
    tools:context=".PollUpload">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:paddingTop="16dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText5"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/progress_round_test"
            android:gravity="start"
            android:hint="Title..."
            android:inputType="textMultiLine"
            android:padding="4dp"
            android:singleLine="false" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/linear"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">


        </LinearLayout>
        <Button
            android:id="@+id/button2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/roundtest"
            android:text="Add option"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_weight="2"
                android:text="TYPE"
                android:visibility="gone"
                android:textColor="#000000"
                android:textStyle="bold"

                />

            <Spinner
                android:id="@+id/sem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:visibility="gone"
                android:layout_weight="3"
                android:padding="8dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/submission"
            android:layout_width="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Select Deadline Date"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_light"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:id="@+id/submissiontime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Select Deadline Time"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_light"
            android:layout_marginBottom="8dp"/>
        <Button
            android:id="@+id/button3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/roundtest"
            android:text="UPLOAD POLL"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/proglog"
        android:visibility="gone" />

</FrameLayout>