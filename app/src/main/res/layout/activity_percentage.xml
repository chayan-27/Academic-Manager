<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Percentage">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/prest"
        android:scaleType="centerCrop"/>

    <EditText
        android:id="@+id/pres"
        android:layout_width="355dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="number"
        android:background="@drawable/progress_round"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:hint="ENTER NUMBER OF CLASSES PRESENT"/>
    <EditText
        android:id="@+id/total"
        android:layout_width="355dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="number"
        android:background="@drawable/progress_round"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/pres"
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:hint="ENTER TOTAL NUMBER OF CLASSES"/>

    <Button
        android:id="@+id/calc"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/total"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/roundedcorner"
        android:text="CALCULATE"
        tools:layout_alignParentBottom="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/calc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Number"
        android:textAlignment="center"
        android:gravity="center"
        android:visibility="invisible"
        android:id="@+id/stat"


        android:textColor="#FB0A0A"
        android:textSize="36sp" />




</RelativeLayout>