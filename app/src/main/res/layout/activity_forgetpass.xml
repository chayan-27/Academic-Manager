<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Forgetpass">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/quess"
        android:scaleType="centerCrop"/>
    <EditText
        android:id="@+id/recov"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:background="@drawable/progress_round"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:hint="Enter Webmail"/>
    <Button
        android:id="@+id/pd"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/recov"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/roundtest"
        android:text="RESET PASSWORD"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        tools:layout_alignParentBottom="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/pd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"

        android:textAlignment="center"
        android:gravity="center"

        android:id="@+id/txtp"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btl"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/txtp"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/roundedcorner"
        android:text="CONTINUE TO LOGIN"
        android:visibility="invisible"
        tools:layout_alignParentBottom="false"
        android:onClick="again"/>
    <ProgressBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/prwd"
        android:visibility="invisible"/>

</RelativeLayout>