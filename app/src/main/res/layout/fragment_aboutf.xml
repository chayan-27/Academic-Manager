<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2e2e2"
    android:clickable="true"
    tools:context=".Aboutf">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            tools:context=".About">

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/uuu"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/c"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:inputType="textMultiLine"


                android:text="Official \t Class \t App \t specially \t designed \t to \t serve \t for \t the \t customised \t needs \t of \t Students  \t from \t the \t academic perspective \t in \t the \t system \t of \t Flexible \t Curriculum \t here \t at \t NITT"


                android:textColor="#000000" />

            <ImageView
                android:id="@+id/i"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="90dp"

                android:src="@mipmap/ice_round" />

            <TextView
                android:id="@+id/c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/i"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="75dp"
                android:text="@string/app_name"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/c"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="23dp"
                android:text="Ver:1.0.2"
                android:textColor="#F7656161"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/uuu"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="170dp"
                android:text="DEVELOPER"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ii"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/b"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="CHAYAN SHARMA"

                android:textColor="#000000"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/bb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ii"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="34dp"
                android:text="SERVER MANAGEMENT"

                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ideate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/bb"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="SAI GANESH"

                android:textColor="#000000"
                android:textSize="11sp" />






        </RelativeLayout>
    </ScrollView>

</FrameLayout>