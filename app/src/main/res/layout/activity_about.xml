<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/abt"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/aboutcorner"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/c"
        android:layout_marginTop="60dp"
        android:text="Official Class App specially designed to serve for the customised needs of Students of ICE B from the academic perspective in the system of Flexible Curriculum here at NITT"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:id="@+id/uuu"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/iceb_round"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"

        android:id="@+id/i"
        />

    <TextView
        android:id="@+id/c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/i"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="@string/app_name"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/c"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="Ver:1.0.1"
        android:id="@+id/e"

        android:textColor="#F7EDE9E9"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/uuu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:text="IDEATOR AND PUBLISHER"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/b"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="SAI GANESH"
        android:id="@+id/ii"

        android:textColor="#FFFFFF"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/bb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ii"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="DEVELOPER"

        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="CHAYAN SHARMA"

        android:textColor="#FFFFFF"
        android:textSize="11sp"/>



</RelativeLayout>